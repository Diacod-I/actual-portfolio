---
import Layout from '../layouts/Layout.astro';

const pageTitle="About Me";

const identity = {
	firstName: "Advith",
	lastName: "Krishnan",
	country: "India",
	occupation: "AI Engineer",
	hobbies: ["Keyboard", "Digital Art", "Photography", "Travel", "Food"]
}

const skills = ["Python", "TypeScript", "HTML", "CSS", "JavaScript", "C++", "C"]; 
---

<Layout>
<!-- Hero Section -->
<div class="hero bg-zinc-900 text-white py-8 px-8 text-center rounded-lg shadow-md mx-6">
    <h1 class="text-6xl font-semibold text-white text-center">Hi! I'm Advith Krishnan :)</h1>
  <!-- <a href="#cards" class="bg-sky-500 hover:bg-sky-600 text-white font-bold py-2 px-4 rounded">Explore More</a> -->
</div>

<!-- Existing Cards Section -->
<div id="cards" class="grid grid-cols-1 md:grid-cols-2 gap-2 mt-3 mx-6">
  <div class="bg-linear-to-r/shorter from-zinc-600 to-sky-200/50 p-6 rounded-lg w-[60vw] mr-auto flex items-center justify-center">
  </div>
  <div class="bg-gray-800 rounded-lg shadow-md w-[36vw] ml-auto">
    <img src="/Advith_Krishnan.jpg" alt="Advith Krishnan Profile" class="rounded-lg w-full h-full">
  </div>
</div>

<!-- Call-to-Action Section -->
<div class="bg-gradient-to-b from-zinc-900 to-zinc-700 text-white py-12 px-8 text-center mt-12">
  <h2 class="text-2xl font-bold mb-4">Want to Collaborate?</h2>
  <p class="text-lg mb-6">Feel free to reach out to me for exciting projects or just to say hi!</p>
  <a href="/contact_me" class="bg-sky-500 hover:bg-sky-600 text-white font-bold py-2 px-4 rounded">Contact Me</a>
</div>
</Layout>
