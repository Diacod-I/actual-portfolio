---
import Layout from '../layouts/Layout.astro';
import AudioPlayer from '../components/AudioPlayer.astro';

const pageTitle="About Me";

const identity = {
    firstName: "Advith",
    lastName: "Krishnan",
    country: "India",
    occupation: "AI Engineer",
    hobbies: ["Keyboard", "Digital Art", "Photography", "Travel", "Food"]
}

const skills = ["Python", "TypeScript", "HTML", "CSS", "JavaScript", "C++", "C"]; 
---

<Layout>
<!-- Hero Section -->
<div class="hero bg-radial-[at_50%_50%] from-zinc-800/90 from-20% to-zinc-900/50 to-50% text-white py-4 px-4 text-center mx-6 animate-fadeIn delay-1">
    <h1 class="text-6xl font-semibold text-white text-center">Hi! I'm Advith Krishnan :)</h1>
    <p class="text-2xl font-medium text-gray-300 mt-4">
      I can be your <span id="role" class="text-white bg-sky-500 rounded-md px-2 py-1"></span>
    </p>
</div>

<script>
    const roles = [" ü§ñ AI/ML Engineer. ", " üíª Software Engineer. ", " üß† AI Researcher. ", " üåê Full Stack Engineer. ", " üîß Hardware/Low-Level Engineer. ", " üé® Designer. ", " üèñÔ∏è Freelance Developer. ", " ‚úçÔ∏è Technical Writer. ", " ü§ù Community Builder. "]
    let currentIndex = 0;
    let charIndex = 0;
    let isDeleting = false;

    function typeRole() {
        const roleElement = document.getElementById('role');
        const currentRole = roles[currentIndex];

        if (isDeleting) {
            // Remove characters but stop at 1 character
            roleElement.textContent = currentRole.substring(0, charIndex--) + "_";
        } else {
            // Add characters
            roleElement.textContent = currentRole.substring(0, charIndex++) + " ‚ñã";
        }

        // Determine typing speed
        let typingSpeed = isDeleting ? 50 : 100;

        // Pause briefly after fully typing the role
        if (!isDeleting && charIndex === currentRole.length) {
            typingSpeed = 2000; // Pause for 2 seconds
            isDeleting = true; // Start deleting after the pause
        } else if (isDeleting && charIndex === 0) {
            isDeleting = false; // Switch to typing mode
            currentIndex = (currentIndex + 1) % roles.length; // Move to the next role
        }

        setTimeout(typeRole, typingSpeed);
    }

    // Start the typewriting animation
    document.addEventListener("DOMContentLoaded", () => {
        typeRole();
    });
</script>

<!-- Existing Cards Section -->
<div class="bg-radial-[at_50%_40%] from-sky-800/40 to-zinc-900 to-50% animate-fadeIn delay-2">
<div id="cards" class="grid grid-cols-1 md:grid-cols-2 gap-2 mt-3 mx-6">
  <div class="flex flex-row gap-2 mx-auto w-[97vw]">
    <!-- Left Card column -->
    <div class="flex flex-col h-[40vw] mx-auto animate-fadeIn delay-3">
      <!-- Music Card -->      
       <div class="bg-zinc-800/0 w-[33vw] mr-auto flex items-center justify-center md-shadow transform transition-transform duration-300 hover:scale-102 overflow-hidden">
          <!-- <p class="text-white font-semibold mt-1">Play this while scrolling through..</p>
          <p class="text-zinc-500 mb-2" style="color: #71717a;">(Total time = ~5 min)</p> -->
            <AudioPlayer
              coverImage="/transendence_cover_image.jpeg"
              title="Transcendence"
              artist="Alexander Nakarada"
              audioSrc="/Transcendence-chosic.com_.mp3"
            />
      </div>
      <!-- Blog Posts Card -->
      <div class="bg-zinc-800 h-[32vw] w-[33vw] p-6 ml-auto flex items-center justify-center md-shadow transform transition-transform duration-300 hover:scale-102 animate-fadeIn delay-3">
          <h2 class="text-2xl font-semibold text-white mb-auto mr-auto">Check out my recent publication üëá</h2>
      </div>
    </div>
    <!-- Image Card -->
    <div class="image_card bg-gray-800 shadow-md w-[33vw] h-[27vw] ml-auto transform transition-transform duration-300 hover:scale-102 animate-fadeIn delay-2 mt-5">
      <img src="/Advith_Krishnan.png" alt="Advith Krishnan Profile" class="w-full h-full">
    </div>
    <!-- Right Card Column -->
    <div class="flex flex-col h-[40vw] mx-auto animate-fadeIn delay-3">
      <div class="bg-zinc-800 h-[25vw] w-[33vw] p-6 mr-auto flex items-center justify-center md-shadow transform transition-transform duration-300 hover:scale-102 animate-fadeIn delay-3">
        <h2 class="text-2xl font-semibold text-white mb-auto mr-auto">Recent blog posts üìù</h2>
      </div>
    </div>
  </div>
  </div>
</div>

<!-- Call-to-Action Section -->
<div class="bg-zinc-900 text-white py-12 px-8 text-center mt-12">
  <h2 class="text-2xl font-bold mb-4">Want to Collaborate?</h2>
  <p class="text-lg mb-6">Feel free to reach out to me for exciting projects or just to say hi!</p>
  <a href="/contact-me" class="bg-sky-400 hover:bg-sky-300 text-white font-bold py-2 px-4">Contact Me</a>
</div>

